<% if @promotion.errors.any? %>
  <ul>
    <% @promotion.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @promotion do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :description %>
  <%= f.text_area :description %>
  <%= f.label :code %>
  <%= f.text_field :code %>
  <%= f.label :discount_rate %>
  <%= f.number_field :discount_rate, min: 0 %>
  <%= f.label :coupon_quantity %>
  <%= f.number_field :coupon_quantity, min: 0, step: 1 %>
  <%= f.label :expiration_date %>
  <%= f.date_field :expiration_date %>
  <%= f.submit 'Criar promoção' %>
<% end %>

